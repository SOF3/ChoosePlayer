{
    "name": "sof3/chooseplayer",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "pocketmine/pocketmine-mp": "^4.0.0",
        "sof3/await-generator": "^3.4.2",
        "sof3/libasynql": "^4.1.1",
        "dktapps/pmforms": "master"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.4",
        "sof3/pharynx": "^0.2.2"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "dktapps/pmforms",
                "version": "master",
                "autoload": {
                    "classmap": ["src/"]
                },
                "source": {
                    "url": "https://github.com/dktapps-pm-pl/pmforms",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "autoload": {
        "classmap": [
            "src",
            "gen"
        ]
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SOFe",
            "email": "sofe2038@gmail.com"
        }
    ],
    "scripts": {
        "all": [
            "composer gen",
            "composer fmt",
            "composer lint",
            "composer test",
            "composer build"
        ],
        "gen": [
            "[ -f libasynql.phar ] || wget -O libasynql.phar https://poggit.pmmp.io/v.dl/poggit/libasynql/libasynql/^4.1.1",
            "php libasynql.phar fx src SOFe\\\\ChoosePlayer\\\\Queries --gen gen --struct 'final class' resources/*"
        ],
        "fmt": [
            "php-cs-fixer fix"
        ],
        "lint": [
            "phpstan analyze"
        ],
        "test": [
            "phpunit tests"
        ],
        "build": [
            "vendor/bin/pharynx -i=. -p=ChoosePlayer.phar -s gen"
        ]
    }
}
