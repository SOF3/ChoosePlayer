{
    "name": "sof3/chooseplayer",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "pocketmine/pocketmine-mp": "^4.0.0",
        "sof3/await-generator": "^3.5.1",
        "sof3/libasynql": "^4.1.7",
        "dktapps/pmforms": "dev-composer"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.4",
        "sof3/pharynx": "^0.3.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/SOF3/pmforms"
        }
    ],
    "autoload": {
        "classmap": [
            "src",
            "gen"
        ]
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SOFe",
            "email": "sofe2038@gmail.com"
        }
    ],
    "scripts": {
        "all": [
            "composer fmt",
            "composer lint",
            "composer test",
            "composer build"
        ],
        "gen": [
            "composer install",
            "php -dphar.readonly=0 vendor/bin/fx.php src SOFe\\\\ChoosePlayer\\\\Queries --gen gen --struct 'final class' resources/*.sql",
            "php hack/gen-permissions.php"
        ],
        "fmt": [
            "composer gen",
            "php-cs-fixer fix"
        ],
        "lint": [
            "composer gen",
            "phpstan analyze"
        ],
        "test": [
            "composer gen",
            "phpunit tests"
        ],
        "build": [
            "composer gen",
            "php -dphar.readonly=0 vendor/bin/pharynx -i=. -p=hack/ChoosePlayer.phar -c"
        ],
        "post-install-cmd": [
            "php vendor/bin/fx.php src 'SOFe\\ChoosePlayer\\Queries' --gen gen --struct 'final class' resources/*.sql",
            "php hack/gen-permissions.php"
        ]
    }
}
